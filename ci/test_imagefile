ARG CI_IMAGE_NAME_TAG
FROM ${CI_IMAGE_NAME_TAG}

ARG FILE_ENV
ENV FILE_ENV=${FILE_ENV}

ENV CI_IMAGE_NAME_TAG=${CI_IMAGE_NAME_TAG}

RUN echo CI_IMAGE_NAME_TAG=${CI_IMAGE_NAME_TAG}
RUN echo FILE_ENV=${FILE_ENV}
RUN echo $0
# /bin/sh
RUN ls -l $0
# /bin/sh -> dash

